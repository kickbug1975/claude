generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Existing Models from Routing App ---

model Client {
  id         Int      @id @default(autoincrement())
  code       String?  @unique
  name       String
  street     String?
  number     String?
  postalCode String?
  city       String?
  country    String?
  address    String
  lat        Float?
  lng        Float?
  phone      String?
  mobile     String?
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  isPriority Boolean  @default(false)
  email      String?
}

model Driver {
  id                 Int          @id @default(autoincrement())
  userId             Int          @unique
  licenseNumber      String?
  phone              String?
  hourlyRate         Float?       @default(0)
  currentLat         Float?
  currentLng         Float?
  lastLocationUpdate DateTime?
  User               User         @relation(fields: [userId], references: [id])
  Route              Route[]
  TripReport         TripReport[]
}

model MaintenanceLog {
  id          Int      @id @default(autoincrement())
  vehicleId   Int
  description String
  cost        Float?
  date        DateTime @default(now())
  resolved    Boolean  @default(false)
  Vehicle     Vehicle  @relation(fields: [vehicleId], references: [id])
}

model Route {
  id                 Int         @id @default(autoincrement())
  driverId           Int
  vehicleId          Int?
  date               DateTime
  stops              Json
  status             RouteStatus @default(PENDING)
  estimatedKm        Int?
  actualKm           Int?
  notes              String?
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  actualCost         Float?
  actualDuration     Int?
  estimatedCost      Float?
  estimatedDuration  Int?
  actualStartTime    DateTime?
  scheduledStartTime String?
  Driver             Driver      @relation(fields: [driverId], references: [id])
  Vehicle            Vehicle?    @relation(fields: [vehicleId], references: [id])
}

model TripReport {
  id           Int      @id @default(autoincrement())
  driverId     Int
  date         DateTime @default(now())
  content      String
  vehicleIssue Boolean  @default(false)
  Driver       Driver   @relation(fields: [driverId], references: [id])
}

model Vehicle {
  id              Int              @id @default(autoincrement())
  model           String
  licensePlate    String           @unique
  currentKm       Int
  status          String           @default("ACTIVE")
  fuelConsumption Float?           @default(10)
  costPerKm       Float?           @default(0.25)
  MaintenanceLog  MaintenanceLog[]
  Route           Route[]
}

// --- Merged User Model ---

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(DRIVER)
  name      String?  // Made optional for compatibility
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Existing Relations
  Driver    Driver?

  // Restored Relations for Migration (will be removed later)
  monteurId String?   @unique
  monteur   Monteur?  @relation(fields: [monteurId], references: [id])
  refreshTokens RefreshToken[]
  resetTokens   ResetToken[]
}

// --- New Models for Maintenance App ---

model MaintenanceUser {
  id        String          @id @default(uuid())
  email     String          @unique
  password  String
  role      MaintenanceRole @default(MONTEUR)
  nom       String?
  prenom    String?
  isActive  Boolean         @default(true)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  // Relations Maintenance
  monteurId     String?                   @unique
  monteur       Monteur?                  @relation(fields: [monteurId], references: [id])
  refreshTokens MaintenanceRefreshToken[]
  resetTokens   MaintenanceResetToken[]

  @@map("maintenance_users")
}

model MaintenanceRefreshToken {
  id                String          @id @default(uuid())
  token             String          @unique
  maintenanceUserId String
  maintenanceUser   MaintenanceUser @relation(fields: [maintenanceUserId], references: [id], onDelete: Cascade)
  expiresAt         DateTime
  createdAt         DateTime        @default(now())

  @@map("maintenance_refresh_tokens")
}

model MaintenanceResetToken {
  id                String          @id @default(uuid())
  token             String          @unique
  maintenanceUserId String
  maintenanceUser   MaintenanceUser @relation(fields: [maintenanceUserId], references: [id], onDelete: Cascade)
  expiresAt         DateTime
  createdAt         DateTime        @default(now())

  @@map("maintenance_reset_tokens")
}

model Company {
  id             String   @id @default(uuid())
  nom            String
  adresse        String?
  telephone      String?
  email          String?
  siret          String?
  logoUrl        String?
  primaryColor   String?  @default("#1a73e8")
  secondaryColor String?  @default("#202124")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("company")
}

model Chantier {
  id          String   @id @default(uuid())
  nom         String
  adresse     String
  client      String
  dateDebut   DateTime
  dateFin     DateTime?
  statut      StatutChantier @default(EN_COURS)
  description String?
  actif       Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  feuilles    FeuilleTravail[]

  @@map("chantiers")
}

model FeuilleTravail {
  id              String   @id @default(uuid())
  chantierId      String
  chantier        Chantier @relation(fields: [chantierId], references: [id])
  monteurId       String
  monteur         Monteur  @relation(fields: [monteurId], references: [id])
  dateTravail     DateTime
  heuresMatin     Float    @default(0)
  heuresApresMidi Float    @default(0)
  heuresDeplace   Float    @default(0)
  statut          StatutFeuille @default(BROUILLON)
  commentaire     String?
  signature       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  frais           Frais[]
  fichiers        Fichier[]

  @@map("feuilles_travail")
}

model Frais {
  id          String   @id @default(uuid())
  feuilleId   String
  feuille     FeuilleTravail @relation(fields: [feuilleId], references: [id], onDelete: Cascade)
  type        TypeFrais
  montant     Float
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("frais")
}

model Fichier {
  id          String   @id @default(uuid())
  feuilleId   String?
  feuille     FeuilleTravail? @relation(fields: [feuilleId], references: [id], onDelete: Cascade)
  nom         String
  url         String
  mimeType    String
  taille      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("fichiers")
}



model Monteur {
  id                    String   @id @default(uuid())
  nom                   String
  prenom                String
  telephone             String
  email                 String   @unique
  adresse               String
  dateEmbauche          DateTime
  numeroIdentification  String   @unique
  actif                 Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  user                  User?
  maintenanceUser       MaintenanceUser?
  feuilles              FeuilleTravail[]

  @@map("monteurs")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    Int      // Int to match User.id
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("refresh_tokens")
}

model ResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    Int      // Int to match User.id
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("reset_tokens")
}

model MaintenanceTask {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(PENDING)
  priority    Priority   @default(MEDIUM)
  assignedTo  String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  completedAt DateTime?

  @@map("maintenance_tasks")
}

// --- Enums ---

enum Role {
  ADMIN
  DRIVER
  USER
  MODERATOR
  SUPERVISEUR // Kept for backward compatibility with existing data
  MONTEUR     // Kept for backward compatibility with existing data
}

enum MaintenanceRole {
  ADMIN
  SUPERVISEUR
  MONTEUR
}

enum RouteStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum StatutChantier {
  PREVU
  EN_COURS
  TERMINE
  ANNULE
}

enum StatutFeuille {
  BROUILLON
  SOUMIS
  VALIDE
  REJETE
}

enum TypeFrais {
  REPAS
  HOTEL
  PEAGE
  CARBURANT
  AUTRE
}

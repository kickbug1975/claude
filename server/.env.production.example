# Environment Variables for Production

# Application
NODE_ENV=production
PORT=5000
CLIENT_URL=https://votre-app.com

# Database (Replace with your production DB)
DATABASE_URL="postgresql://user:pass@host:5432/maintenance_db?sslmode=require"

# JWT (Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-production-jwt-secret
JWT_EXPIRES_IN=7d

# AWS S3 (Optional - needed if file uploads are enabled)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=maintenance-files-prod
AWS_REGION=eu-west-1

# Email (Recommended for actual use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@maintenance.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
